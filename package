#!/bin/sh

if [ "$(whoami)" != "root" ]
then
    echo "must be root to run this script"
    exit 1
fi

if [ -z $(which ruby) ]
then
    aptitude -y install ruby
fi

case "$1" in 
    "install")
	ruby -e "
require 'package'
require 'packages/$2'
Packages.install(:$2)
"
	;;

    "remove")
	ruby -e "
require 'package'
require 'packages/$2'
Packages.remove(:$2)
"
	;;
    *)
	echo "option $1 not recognized"
	echo "usage: package install|remove|installed? <item>"
	;;
esac
